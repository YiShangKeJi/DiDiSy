<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fit_windows"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_back"
            style="@style/text_ty"
            android:layout_width="@dimen/y100"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/left_jiantou" />

        <TextView
            android:id="@+id/tv_rote"
            style="@style/text_ty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="常用路线" />

        <TextView
            style="@style/text_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="完善订单信息" />
    </RelativeLayout>

    <com.ys.didisy.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_choose_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/my_on"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="用车时间" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="现在"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:paddingRight="@dimen/x20"
                    android:text="点击修改"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:background="@drawable/right_jiantou" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/my_on"
                    android:paddingLeft="30px" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_ty"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="30px"
                        android:text="振兴" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/text_ty"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="30px"
                        android:text="18756445412" />
                </LinearLayout>

                <TextView
                    style="@style/text_ty"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:background="@drawable/right_jiantou" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_destination"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/my_on"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="桃花潭" />

                <TextView
                    android:id="@+id/tv_signature"
                    style="@style/text_ty"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:background="@drawable/right_jiantou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y2"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y70"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@drawable/rectangle"
                    android:paddingLeft="30px"
                    android:paddingRight="@dimen/x30"
                    android:text="添加目的地" />

                <TextView
                    style="@style/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y70"
                    android:gravity="center_vertical"
                    android:hint="《请按货运主次顺序添加即可》"
                    android:paddingLeft="30px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_extra_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/my_on"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="额外服务" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="装卸、回单、回款等服务"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:background="@drawable/right_jiantou" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginTop="@dimen/y2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_ty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/feedback"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="给司机捎句话" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="货物类型、特殊情况"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_ty"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:background="@drawable/right_jiantou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y180"
                android:layout_marginTop="@dimen/y50"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_choose"
                            android:layout_width="@dimen/x30"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x10"
                            android:src="@drawable/choose_on" />

                        <TextView
                            style="@style/text_14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x10"
                            android:text="自主选择司机"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_14"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="约"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/text_30"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_weight="1"
                            android:text="54.5" />

                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_jiantou" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/y2"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginTop="@dimen/y10"
                    android:background="@color/gray"></View>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_system_choose"
                            android:layout_width="@dimen/x30"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x10"
                            android:src="@drawable/choose_off" />

                        <TextView
                            style="@style/text_14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x10"
                            android:text="系统选择司机" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_14"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="约" />

                        <TextView
                            style="@style/text_30"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_weight="1"
                            android:text="54.5" />

                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_jiantou" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:background="@color/gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:background="@color/white"
                    android:text="已经减免" />

                <TextView
                    style="@style/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:background="@color/white"
                    android:text="6.0"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="元" />
            </LinearLayout>

            <TextView
                style="@style/text_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_margin="@dimen/y50"
                android:background="@color/button_yellow"
                android:text="下一步" />
        </LinearLayout>
    </com.ys.didisy.widget.ReboundScrollView>
</LinearLayout>

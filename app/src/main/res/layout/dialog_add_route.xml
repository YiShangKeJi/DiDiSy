<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fit_windows"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_back"
            style="@style/text_ty"
            android:layout_width="@dimen/y100"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/left_jiantou" />

        <TextView
            style="@style/text_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="新增常用路线" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            style="@style/text_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_margin="@dimen/x30"
            android:background="@color/gray"
            android:gravity="left|center"
            android:hint="输入路线名称"
            android:padding="@dimen/x20" />

        <LinearLayout
            android:id="@+id/ll_start_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_ty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_14"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:hint="请输入始发地"
                android:paddingLeft="30px" />

            <TextView
                android:id="@+id/tv_signature"
                style="@style/text_ty"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/gray"></View>

        <LinearLayout
            android:id="@+id/ll_end_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_ty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_14"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:hint="请输入目的地"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_ty"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                style="@style/text_ty"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y70"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/rectangle"
                android:paddingLeft="30px"
                android:paddingRight="@dimen/x30"
                android:text="添加目的地" />

            <TextView
                style="@style/text_12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y70"
                android:gravity="center_vertical"
                android:hint="《请按货运主次顺序添加即可》"
                android:paddingLeft="30px" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/x50"
        android:background="@color/confirm"
        android:text="保存" />

</LinearLayout>

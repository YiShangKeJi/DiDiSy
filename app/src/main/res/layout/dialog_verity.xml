<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fit_windows"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:background="@color/colorTheme">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10">

            <TextView
                style="@style/text_ty"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/img_23" />
        </RelativeLayout>

        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="登录迪迪快运" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:text="短信验证码以发送至" />

        <TextView
            style="@style/text_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18762415587"
            android:textColor="@color/red" />

        <TextView
            style="@style/text_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="，请注意查收" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/circle"
        android:orientation="horizontal">

        <TextView
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="验证码" />

        <EditText
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x5"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入验证码" />

        <TextView
            style="@style/text_ty"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y70"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/confirm"
            android:text="90s" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        style="@style/button_ty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_margin="@dimen/y50"
        android:text="下一步" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x100"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_ty"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y200"
            android:background="@drawable/img_54" />

    </LinearLayout>
</LinearLayout>

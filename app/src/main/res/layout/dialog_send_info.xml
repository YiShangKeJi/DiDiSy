<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fit_windows"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:background="@color/colorTheme">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10">

            <TextView
                style="@style/text_ty"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/img_23" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_rote"
            style="@style/text_ty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="切换地图选点" />

        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="发货信息" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/img_24" />

        <TextView
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:text="桃花潭" />

        <TextView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/right_jiantou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y1"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/img_25" />

        <TextView
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:hint="请填写详细信息（可不填）"
            android:paddingLeft="@dimen/x30" />

        <TextView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/right_jiantou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/img_14" />

        <TextView
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:hint="请输入发货人姓名（可不填）"
            android:paddingLeft="@dimen/x30" />

        <TextView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/right_jiantou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y1"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/img_15" />

        <TextView
            style="@style/text_ty"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:text="桃花潭" />

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/right_jiantou" />
    </LinearLayout>


    <TextView
        style="@style/button_ty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_margin="@dimen/y50"
        android:text="下一步" />
</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_head"
            style="@style/ty_title"
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y100"
            android:background="@drawable/homepage" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/ty_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center"
            android:text="1888888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center|bottom">

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.0"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_balance"
                        android:gravity="center"
                        android:text="元" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的余额" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center|bottom">

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_coupon"
                        android:gravity="center"
                        android:text="张" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的优惠券" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center|bottom">

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_integral"
                        android:gravity="center"
                        android:text="分" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的积分" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="我的常用路线" />

            <TextView
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="邀请好友" />

            <TextView
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="收费标准" />

            <TextView
                android:id="@+id/tv_signature"
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="用户协议" />

            <TextView
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="关于我们" />

            <TextView
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/my_on"
                android:gravity="center_vertical"
                android:paddingLeft="30px" />

            <TextView
                style="@style/text_normal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="客服中心" />

            <TextView
                style="@style/text_normal"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="30px"
                android:background="@drawable/right_jiantou"
                android:gravity="center|right" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_out"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginTop="@dimen/y30"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingLeft="30px"
            android:text="退出登录" />

    </LinearLayout>
</ScrollView>
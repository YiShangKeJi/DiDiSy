        <!-- <item name="android:clipToPadding">true</item>
         <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="main_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/p22</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/product_text</item>
    </style>

    <style name="ty_list">
        <item name="android:layout_height">0px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/p26</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/y30</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/touming</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Moren_touxiang">
        <item name="android:src">@drawable/img_42</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/mycolor</item>
    </style>
    <!--底部弹出-->
    <style name="bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="button_ty">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/p32</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/next_button</item>
    </style>
